<h2><%= @product.name %></h2>
<p><%= @product.description %></p>
<p><%= @product.stock %></p>
<p><%= @product.price %></p>
<h2>Vendido Por:</h2>
<p><%= @product.user.email %></p>

<%= link_to "Delete",
  product_path(@product),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to "Edit",
  edit_product_path(@product) %>

<%= simple_form_for [@product, @order] do |f| %>
  <%= f.input :quantity, as: :numeric, input_html: { min: 1, max: @product.stock } %>
  <%= f.submit %>
<% end %>
